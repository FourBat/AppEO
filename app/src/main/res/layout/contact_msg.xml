<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/chat_actionbar"/>
    <RelativeLayout
        android:background="@color/bottom_rbtn_text_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/bottom_rbtn_text_click"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/contact_iv_title"
                android:layout_marginTop="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/emotion_003"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/contact_tv_name"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/contact_iv_title"
                android:textColor="@color/rc_conversation_list_divider_color"
                android:text="刘菲炫"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>