<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/Indigo_nav_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/work_title_height">
        <ImageView
            android:src="@mipmap/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="选择联系人"
            android:layout_centerInParent="true"
            android:textColor="@color/rc_ad_file_list_select_file_text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/dynamic_add_btn_confirm"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:textColor="@color/rc_ad_file_list_select_file_text_state"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/dynamic_add_contact"
        android:background="@drawable/choosed_contact_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/choose_contacts_choosed_list_height">

    </LinearLayout>
    <ListView
        android:id="@+id/choose_contacts_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>